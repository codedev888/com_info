@charset "UTF-8";
/**
 * 下方引入的为uView UI的集成样式文件，为scss预处理器，其中包含了一些"u-"开头的自定义变量
 * 使用的时候，请将下面的一行复制到您的uniapp项目根目录的uni.scss中即可
 * uView自定义的css类名和scss变量，均以"u-"开头，不会造成冲突，请放心使用 
 */
.box {
  padding: 30rpx 0;
}
.box .left image {
  width: 160rpx;
  height: 140rpx;
}
.box .right {
  width: 520rpx;
  padding-left: 10rpx;
}
.box .right .name {
  font-weight: 600;
  font-size: 30rpx;
  padding-bottom: 20rpx;
}
.input-box {
  margin: 20rpx 0;
}
.input-box .left {
  width: 180rpx;
  font-size: 26rpx;
  line-height: 60rpx;
}
.input-box .left .required {
  width: 20rpx;
  display: block;
  color: #FA675C;
}
.input-box .input {
  border-radius: 8rpx;
  overflow: hidden;
  border: #f2f2f2 solid 2rpx;
  width: 540rpx;
  padding: 0rpx 20rpx;
}
.set-bar {
  position: fixed;
  width: 100%;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  bottom: 0rpx;
  left: 0rpx;
  background: #ffffff;
}
.section3 {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #6482ff;
  border-left: #f2f2f2 solid 2rpx;
}
.section3.active {
  background-color: #6482ff;
  color: #ffffff;
}
.section3:after {
  border: 0;
  border-radius: 0rpx;
}
.section3:first {
  border: 0;
}
uni-button {
  border-radius: 0;
}
.tips {
  font-size: 28rpx;
  color: #EB5E00;
  background-color: rgba(235, 94, 0, 0.02);
  line-height: 60rpx;
  padding: 0rpx 30rpx;
}
.tags {
  padding-bottom: 12rpx;
}
.tags text {
  background: #E4E8FB;
  border-radius: 6rpx;
  padding: 6rpx 10rpx;
  margin-right: 10rpx;
  color: #939ED1;
  font-size: 22rpx;
}
.tags text:last-child {
  background: #FBF2E4;
  color: #C9AE85;
}

