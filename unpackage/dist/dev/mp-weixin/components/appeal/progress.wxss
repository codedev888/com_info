page {
  padding-bottom: 100rpx;
}
.info-item {
  margin: 60rpx 0;
  border-left: rgba(100, 125, 250, 0.2) solid 10rpx;
  position: relative;
  padding-left: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}
.info-item .date {
  line-height: 1;
  padding-bottom: 16rpx;
}
.info-item .date .status {
  margin-left: 100rpx;
  color: #627BF8;
}
.info-item text:first-child {
  margin-right: 30rpx;
}
.info-item:before {
  position: absolute;
  left: 30rpx;
  top: 0rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 10rpx;
  content: "";
  background: rgba(100, 125, 250, 0.2);
  z-index: 2;
}

